
<div class="row">

    <div class="container mt-5 col-8">
        {{#each postF as |p key|}}
            <div class="card mb-5 bg-dark" style="width: 35rem;">
                    <div class="card-body">
                        <small class="text-muted">{{getDate p.createdAt}}</small>
                        <header>
                            <div class="p-image-text">
                                <span class="p-image">
                                    <img src="/assets/images/profile-11.jpg" alt="profile">
                                </span>
                                <h4 class="text text-center mt-2 mb-3">{{p.author.dataValues.name}}</h4>
                            </div>
                        </header>
                        <p class="text-white ms-5 me-5">
                            {{p.content}}
                        </p>
                        <div class="mt-5">
                            <a type="button" class="btn btn-primary float-end" href="/new-comment/{{p.id}}?comment=true">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat" viewBox="0 0 16 16">
                                    <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z">
                                    </path>
                                </svg>
                                Commentary
                            </a>
                        </div>
                    </div>
                </div>
        {{/each}}
    </div>

    <div class="mt-5 col-4 border border-success">
        <nav>
            <div>
                <a href="/searchNewFriendHome/{{userId}}" class="btn btn-success">add new friend</a>
            </div>
            <div>
                <ul class="nav flex-column">
                    <h1>Friends</h1>
                    {{#each userF as |uf key|}}
                        <li class="nav-item m-3">
                        <div class="row">
                                <div class="col-8">
                                    <a href="">
                                        <img src="{{uf.imageProfile}}" alt="profile {{uf.name}}" class="rounded-circle" width="50" height="50"> {{uf.name}} {{uf.lastName}} ({{uf.user}})
                                    </a>
                                </div>
                                <div class="col-4">
                                    <a href="/delete/friend/{{../userId}}/{{uf.id}}" class="btn btn-danger">Delete</a>
                                    {{!-- confirmation in the frontend with a modal --}}
                                </div>
                            </div>      
                        </li>
                    {{/each}}
                </ul>
            </div>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>
        </nav>
    </div>
</div>



<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>