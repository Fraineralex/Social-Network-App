<main style="margin-top: 120px;">
    {{!-- New Post section --}}
    <section>
        <form method="POST" class="row g-3 needs-validation position-absolute start-50 mt-5 translate-middle"
            action="/new-post">
            <div class="col-md-8 offset-md-1">
                <div class="card mb-5 bg-dark" style="width: 25rem;">
                    <div class="card-body">
                        <header>
                            <div class="c-image-text">
                                <span class="c-image">
                                    <img src="/assets/images/profile-11.jpg" alt="profile">
